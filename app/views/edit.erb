<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Recipe Name: <input type="text" value="<%=@recipe.name%>" name="name">
  Recipe Ingredients: <input type="text" value="<%=@recipe.content%>" name="content">
  <input type="submit" value="submit">
</form>
